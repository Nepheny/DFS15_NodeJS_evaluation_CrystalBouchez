{% extends 'layout.twig' %}

{% block body %}
<aside class=" col-12 card mb-3">
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-12 card-header">
                    <div class="row">
                        <div class="col-1 header-avatar"><span class=" avatar" style="background-image: url({{ contact.avatar }})"></span></div>
                        <div class="col-2 header-author">{{ contact.firstname }} {{ contact.lastname }}</div>
                        <div class="col-5 text-right header-title">{{ contact.dateTime | date('d/m/Y H:i') }}</div>
                        <div class="col-2 text-right">
                            <form class="form-inline" id="delete">
                            <input type="hidden" value="{{ contact._id }}" name="id" />
                                <button class="btn btn-danger">Supprimer</button>
                            </form>
                        </div>
                        <div class="col-2 text-right">
                            <form class="form-inline" id="update">
                                <button class="btn btn-success">Modifier</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-12 card-content" >
                    <div class="row">
                        <div class="col-12 mb-2 mt-3">
                            {{ contact.description }}
                        </div>
                    </div>
                    {% if contact.phones.length %}
                        <div class="row">
                            {% for phone in contact.phones %}
                                <div class="col-12 mb-2 mt-3">
                                    {{ phone }}
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                     {% if contact.emails.length %}
                        <div class="row">
                            {% for email in contact.emails %}
                                <div class="col-12 mb-2 mt-3">
                                    {{ email }}
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</aside>
{% endblock %}